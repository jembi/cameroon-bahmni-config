<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="add_fields_view_company_form" model="ir.ui.view">
			<field name="name">res.company.inherit</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/notebook/page[1]" position="after">
					<page string="Report Fields">
                        <group>
                            <group name="eng" string="English">
                                <field name="ministry_partner_eng"/>
                                <field name="hf_level_eng"/>
                                <field name="district_eng"/>
                                <field name="area_eng"/>
                                <field name="hf_name_eng"/>
                            </group>
                            <group name="frn" string="French">
                                <field name="ministry_partner_frn"/>
                                <field name="hf_level_frn"/>
                                <field name="district_frn"/>
                                <field name="area_frn"/>
                                <field name="hf_name_frn"/>
                            </group>
                        </group>
                    </page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
